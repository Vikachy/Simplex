<Window x:Class="SimplexSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimplexSolver"
        mc:Ignorable="d"
        Title="Симплекс-метод - Решение задач ЛП" 
        Height="850" Width="1300"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="CellStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="3"/>
        </Style>

        <Style x:Key="BasisCellStyle" TargetType="TextBlock" BasedOn="{StaticResource CellStyle}">
            <Setter Property="Background" Value="#FFE8F4FF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="PivotCellStyle" TargetType="TextBlock" BasedOn="{StaticResource CellStyle}">
            <Setter Property="Background" Value="#FFFFE0B2"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="FRowCellStyle" TargetType="TextBlock" BasedOn="{StaticResource CellStyle}">
            <Setter Property="Background" Value="#FFF0F0F0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="OptimalCellStyle" TargetType="TextBlock" BasedOn="{StaticResource CellStyle}">
            <Setter Property="Background" Value="#FFE8F5E8"/>
            <Setter Property="Foreground" Value="#FF006400"/>
        </Style>

        <DataTemplate x:Key="TableTemplate">
            <Border BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="3" 
                    Margin="0,0,0,15" Padding="10" Background="White">
                <StackPanel>
                    <TextBlock Text="{Binding TableName}" 
                               FontSize="14" FontWeight="Bold" 
                               Margin="0,0,0,10"
                               Foreground="#FF0066CC"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Заголовок таблицы -->
                        <Border Grid.Row="0" BorderBrush="#FF999999" BorderThickness="0,0,0,1" 
                                Background="#FFE8E8E8" Padding="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="70"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Базис" Style="{StaticResource HeaderStyle}"/>
                                <TextBlock Grid.Column="1" Text="Cб" Style="{StaticResource HeaderStyle}"/>
                                <TextBlock Grid.Column="2" Text="Коэффициенты" Style="{StaticResource HeaderStyle}"/>
                                <TextBlock Grid.Column="3" Text="Св.член" Style="{StaticResource HeaderStyle}"/>
                                <TextBlock Grid.Column="4" Text="θ" Style="{StaticResource HeaderStyle}"/>
                            </Grid>
                        </Border>

                        <!-- Данные таблицы -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Rows}" 
                                      Margin="0,0,0,5">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#FFEEEEEE" BorderThickness="0,0,0,1" Padding="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="70"/>
                                                <ColumnDefinition Width="70"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Базисная переменная -->
                                            <TextBlock Grid.Column="0" Text="{Binding BasisVariable}" 
                                                       Style="{StaticResource BasisCellStyle}"/>

                                            <!-- Cб -->
                                            <TextBlock Grid.Column="1" Text="{Binding CB, StringFormat=F2}" 
                                                       Style="{StaticResource CellStyle}"/>

                                            <!-- Коэффициенты -->
                                            <ScrollViewer Grid.Column="2" HorizontalScrollBarVisibility="Auto" 
                                                          VerticalScrollBarVisibility="Disabled">
                                                <StackPanel Orientation="Horizontal">
                                                    <ItemsControl ItemsSource="{Binding Coefficients}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <StackPanel Orientation="Horizontal"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Width="60" BorderBrush="LightGray" 
                                                                        BorderThickness="1" Margin="1,0" 
                                                                        Background="White">
                                                                    <TextBlock Text="{Binding StringFormat=F2}" 
                                                                               Style="{StaticResource CellStyle}"/>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </ScrollViewer>

                                            <!-- Свободный член -->
                                            <TextBlock Grid.Column="3" Text="{Binding RightHandSide, StringFormat=F2}" 
                                                       Style="{StaticResource CellStyle}"/>

                                            <!-- θ (симплексное отношение) -->
                                            <TextBlock Grid.Column="4" 
                                                       Text="{Binding Theta, StringFormat=F2}"
                                                       Style="{StaticResource CellStyle}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </StackPanel>
            </Border>
        </DataTemplate>

        <local:BoolToOptimalTextConverter x:Key="BoolToOptimalTextConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="📋 Загрузить вариант 14" Click="LoadExample_Click" 
                    Margin="0,0,10,0" Padding="15,8" Background="#FF4CAF50" Foreground="White"
                    FontWeight="Bold"/>
            <Button Content="⚡ Решить симплекс-методом" Click="SolveSimplex_Click" 
                    Margin="0,0,10,0" Padding="15,8" Background="#FF2196F3" Foreground="White"
                    FontWeight="Bold"/>
            <Button Content="🗑️ Очистить" Click="Clear_Click" 
                    Margin="0,0,10,0" Padding="15,8" Background="#FF757575" Foreground="White"/>
            <Button Content="📊 Экспорт в Excel" Click="ExportToExcel_Click" 
                    Padding="15,8" Background="#FF9C27B0" Foreground="White"/>
        </StackPanel>

        <!-- Ввод задачи -->
        <GroupBox Grid.Row="1" Header="📝 Постановка задачи" Margin="0,0,0,10"
                  BorderBrush="#FF2196F3" BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Тип оптимизации -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Целевая функция:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbGoal" Width="100" Margin="10,0" Height="28">
                        <ComboBoxItem Content="max →" IsSelected="True" FontWeight="SemiBold"/>
                        <ComboBoxItem Content="min →" FontWeight="SemiBold"/>
                    </ComboBox>
                    <Label Content="Количество переменных:" VerticalAlignment="Center" 
                           Margin="20,0,0,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtVariables" Width="50" Text="3" Margin="5,0" Height="24"/>
                    <Label Content="Количество ограничений:" VerticalAlignment="Center" 
                           Margin="20,0,0,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtConstraints" Width="50" Text="4" Margin="5,0" Height="24"/>
                    <Button Content="Создать таблицу" Click="CreateTable_Click" 
                            Margin="20,0,0,0" Padding="10,5" Background="#FF2196F3" 
                            Foreground="White"/>
                </StackPanel>

                <!-- Коэффициенты целевой функции -->
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Label Content="F(x) =" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <ItemsControl x:Name="icObjective" ItemsSource="{Binding ObjectiveCoefficients}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="10,0">
                                    <TextBox Text="{Binding Value, StringFormat=F2}" 
                                             Width="50" Height="24" VerticalAlignment="Center"
                                             BorderBrush="#FF2196F3" BorderThickness="1"/>
                                    <TextBlock Text=" × x" VerticalAlignment="Center" Margin="3,0,0,0"/>
                                    <TextBlock Text="{Binding Index}" VerticalAlignment="Center" 
                                               FontWeight="Bold" FontSize="13"/>
                                    <TextBlock Text=" +" VerticalAlignment="Center" 
                                               Margin="5,0,0,0" FontWeight="SemiBold"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Таблица ограничений -->
        <GroupBox Grid.Row="2" Header="📊 Ограничения" BorderBrush="#FF4CAF50" BorderThickness="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовки таблицы -->
                    <Border Grid.Row="0" BorderBrush="#FF4CAF50" BorderThickness="0,0,0,2" 
                            Background="#FFE8F5E8" Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Ограничение" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Grid.Column="1" Text="Тип" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Grid.Column="2" Text="Выражение" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Grid.Column="3" Text="Значение" Style="{StaticResource HeaderStyle}"/>
                        </Grid>
                    </Border>

                    <!-- Список ограничений -->
                    <ItemsControl Grid.Row="1" x:Name="icConstraints" 
                                  ItemsSource="{Binding Constraints}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#FFC8E6C9" BorderThickness="0,0,0,1" Padding="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding Name}" 
                                                   VerticalAlignment="Center" FontWeight="SemiBold"/>

                                        <ComboBox Grid.Column="1" SelectedIndex="{Binding TypeIndex}"
                                                  VerticalAlignment="Center" Height="24">
                                            <ComboBoxItem Content="≤"/>
                                            <ComboBoxItem Content="="/>
                                            <ComboBoxItem Content="≥"/>
                                        </ComboBox>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal" 
                                                    VerticalAlignment="Center">
                                            <ItemsControl ItemsSource="{Binding Coefficients}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="5,0">
                                                            <TextBox Text="{Binding Value, StringFormat=F2}" 
                                                                     Width="50" Height="24" VerticalAlignment="Center"
                                                                     BorderBrush="#FF4CAF50" BorderThickness="1"/>
                                                            <TextBlock Text=" × x" VerticalAlignment="Center" 
                                                                       Margin="3,0,0,0"/>
                                                            <TextBlock Text="{Binding Index}" VerticalAlignment="Center" 
                                                                       FontWeight="Bold" FontSize="12"/>
                                                            <TextBlock Text=" +" VerticalAlignment="Center" 
                                                                       Margin="5,0,0,0"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>

                                        <TextBox Grid.Column="3" Text="{Binding RightHandSide, StringFormat=F2}" 
                                                 Width="100" Height="24" VerticalAlignment="Center"
                                                 BorderBrush="#FF4CAF50" BorderThickness="1"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
        </GroupBox>

        <!-- Кнопки управления таблицей -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,10">
            <Button Content="➕ Добавить ограничение" Click="AddConstraint_Click" 
                    Margin="0,0,10,0" Padding="12,6" Background="#FF4CAF50" Foreground="White"/>
            <Button Content="➖ Удалить последнее" Click="RemoveConstraint_Click" 
                    Padding="12,6" Background="#FFF44336" Foreground="White"/>
        </StackPanel>

        <!-- Результаты -->
        <TabControl Grid.Row="4">
            <TabItem Header="📈 Симплекс-таблицы">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <StackPanel x:Name="spTables" Margin="10">
                        <!-- Таблицы будут добавляться здесь -->
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="✅ Решение">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Border Background="White" Padding="20">
                        <StackPanel x:Name="spResults">
                            <StackPanel x:Name="spSolutionContainer">
                                <!-- Решение будет добавляться здесь -->
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="📋 Лог вычислений">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="txtLog" IsReadOnly="True" 
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="12"
                             TextWrapping="Wrap"
                             BorderThickness="0"
                             Background="#FFF5F5F5"/>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>